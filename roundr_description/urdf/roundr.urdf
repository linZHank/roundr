<?xml version="1.0" ?>


<robot name="roundr" xmlns:xacro="https://www.ros.org/wiki/xacro" >

    <!-- Colors -->
    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>
    <material name="dark">
        <color rgba="0.3 0.3 0.3 1.0"/>
    </material>
    <material name="light_black">
        <color rgba="0.4 0.4 0.4 1.0"/>
    </material>
    <material name="blue">
        <color rgba="0.0 0.0 0.8 1.0"/>
    </material>
    <material name="green">
        <color rgba="0.0 0.8 0.0 1.0"/>
    </material>
    <material name="grey">
        <color rgba="0.2 0.2 0.2 1.0"/>
    </material>
    <material name="orange">
        <color rgba="${255/255} ${108/255} ${10/255} 1.0"/>
    </material>
    <material name="brown">
        <color rgba="${222/255} ${207/255} ${195/255} 1.0"/>
    </material>
    <material name="red">
        <color rgba="0.8 0.0 0.0 1.0"/>
    </material>
    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
    </material>
    
    <!-- Define robot constants -->
    <xacro:property name="base_radius" value="0.0653"/>
    <xacro:property name="base_length" value="0.003"/>

    <xacro:property name="wheel_radius" value="0.10"/>
    <xacro:property name="wheel_width" value="0.04"/>
    <xacro:property name="wheel_ygap" value="0.025"/>
    <xacro:property name="wheel_zoff" value="0.05"/>
    <xacro:property name="wheel_xoff" value="0.12"/>

    <xacro:property name="caster_xoff" value="0.14"/>

    <link name="chassis">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.003" radius="0.0635"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.003" radius="0.0635"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.02"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.00002017625" ixy="0" ixz="0" iyy="0.00002017625" iyz="0" izz="0.0000403225"/>
        </inertial>
    </link>

    <joint name="chassis2caster" type="fixed">
        <origin rpy="0 3.141592653589793 1.5707963267948966" xyz="0.054 0 -0.003"/>
        <parent link="chassis"/>
        <child link="caster"/>
    </joint>

    <link name="caster">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://urdf/meshes/pololu-ball-caster-with-0-375in-ball.dae"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin rpy=" 0 0 0" xyz="0 0 -0.00505"/>
            <geometry>
                <box size="0.0191 0.0121 0.0101"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.004"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.000000145161" ixy="0" ixz="0" iyy="0.000000145161" iyz="0" izz="0.000000145161"/>
        </inertial>
        <contact>
            <lateral_friction value="0.0"/>
            <rolling_friction value="0.0"/>
            <stiffness value="30000"/>
            <damping value="1000"/>
        </contact>
    </link>
    
    <joint name="chassis2left_motor" type="fixed">
        <origin rpy="1.5707963267948966 0 1.5707963267948966" xyz="0 0.033 0.00875"/>
        <parent link="chassis"/>
        <child link="left_motor" />
    </joint>

    <link name="left_motor">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://urdf/meshes/micro-metal-gearmotor-with-1086-bracket.dae"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin rpy=" 0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.038 0.012 0.010"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.0095"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0000001931666666" ixy="0" ixz="0" iyy="0.0000012223333333" iyz="0" izz="0.0000012571666666"/>
        </inertial>
        <contact>
            <lateral_friction value="0.0"/>
            <rolling_friction value="0.0"/>
            <stiffness value="30000"/>
            <damping value="1000"/>
        </contact>
    </link>
    
    <joint name="left_motor2left_wheel" type="continuous">
        <origin rpy="0 1.5707963267948966 0" xyz="0.016 0 0"/>
        <parent link="left_motor"/>
        <child link="left_wheel" />
        <axis rpy="0 0 0" xyz="1 0 0"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://urdf/meshes/pololu-wheel-42x19mm.dae"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin rpy=" 0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.019" radius="0.021"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.019"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0000001931666666" ixy="0" ixz="0" iyy="0.0000012223333333" iyz="0" izz="0.0000012571666666"/>
        </inertial>
        <contact>
            <lateral_friction value="0.0"/>
            <rolling_friction value="0.0"/>
            <stiffness value="3000"/>
            <damping value="10000"/>
        </contact>
    </link>
    
    <joint name="chassis2right_motor" type="fixed">
        <origin rpy="1.5707963267948966 0 -1.5707963267948966" xyz="0 -0.033 0.00875"/>
        <parent link="chassis"/>
        <child link="right_motor" />
    </joint>

    <link name="right_motor">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://urdf/meshes/micro-metal-gearmotor-with-1086-bracket.dae"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin rpy=" 0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.038 0.012 0.010"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.0095"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0000001931666666" ixy="0" ixz="0" iyy="0.0000012223333333" iyz="0" izz="0.0000012571666666"/>
        </inertial>
        <contact>
            <lateral_friction value="0.0"/>
            <rolling_friction value="0.0"/>
            <stiffness value="30000"/>
            <damping value="1000"/>
        </contact>
    </link>
    
    <joint name="right_motor2right_wheel" type="continuous">
        <origin rpy="0 -1.5707963267948966 0" xyz="0.016 0 0"/>
        <parent link="right_motor"/>
        <child link="right_wheel" />
        <axis rpy="0 0 0" xyz="1 0 0"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://urdf/meshes/pololu-wheel-42x19mm.dae"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin rpy=" 0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.019" radius="0.021"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.019"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0000001931666666" ixy="0" ixz="0" iyy="0.0000012223333333" iyz="0" izz="0.0000012571666666"/>
        </inertial>
        <contact>
            <lateral_friction value="0.0"/>
            <rolling_friction value="0.0"/>
            <stiffness value="3000"/>
            <damping value="10000"/>
        </contact>
    </link>


</robot>

